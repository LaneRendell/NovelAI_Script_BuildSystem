{
  "name": "nibs-cli",
  "version": "4.0.0",
  "description": "Project build tool for NovelAI scripts - bundles TypeScript files into single scripts",
  "bin": {
    "nibs": "dist/cli.js"
  },
  "license": "MIT",
  "type": "commonjs",
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "tsc",
    "format": "prettier . -w",
    "typecheck": "tsc --noEmit",
    "help": "node src/cli.ts --help"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">= 18"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "@types/node": "^25.0.0",
    "@types/rollup": "^0.51.4",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@rollup/plugin-typescript": "^12.3.0",
    "commander": "^14.0.2",
    "inquirer": "^13.0.2",
    "rollup": "^4.53.3",
    "yaml": "^2.8.2"
  }
}
